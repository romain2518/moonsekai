{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.pseudo }}</td>
            </tr>
            <tr>
                <th>PicturePath</th>
                <td>{{ user.picturePath }}</td>
            </tr>
            <tr>
                <th>BannerPath</th>
                <td>{{ user.bannerPath }}</td>
            </tr>
            <tr>
                <th>Biography</th>
                <td>{{ user.biography }}</td>
            </tr>
            <tr>
                <th>NotificationSetting</th>
                <td>{{ user.notificationSetting ? user.notificationSetting|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>IsNotificationRedirectionEnabled</th>
                <td>{{ user.isNotificationRedirectionEnabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsMuted</th>
                <td>{{ user.isMuted ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsSubscribedNewsletter</th>
                <td>{{ user.isSubscribedNewsletter ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
