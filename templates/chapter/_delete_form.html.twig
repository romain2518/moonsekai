<form method="post" action="{{ path('app_chapter_delete', {'work_id': work.id, 'manga_id': manga.id, 'volume_id': volume.id, 'id': chapter.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chapter.id) }}">
    <button class="btn">Delete</button>
</form>
